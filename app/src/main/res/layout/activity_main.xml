<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
            android:id="@+id/helloBtn"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Hello World!"
            android:gravity="center"
           />

    <com.cosmo.common.widget.CommonImgView
            android:id="@+id/commonImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:actualImageScaleType="focusCrop"
            app:placeholderImage="@mipmap/ic_launcher"
            app:placeholderImageScaleType="focusCrop"
            app:failureImage="@mipmap/ic_launcher"
            app:failureImageScaleType="focusCrop"
            app:roundAsCircle="true"
            app:roundedCornerRadius="@dimen/dp_10"
            app:roundTopLeft="true"
            app:roundTopRight="true"
            app:roundBottomLeft="true"
            app:roundBottomRight="true"

            />

</LinearLayout>

</RelativeLayout>



